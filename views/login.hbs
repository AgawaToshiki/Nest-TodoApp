{{>head}}
<body>
    {{>header}}
    <main>
        <form action="/login" id="login" method="POST" class="wrapper" autocomplete="off">
            <div class="submit-box">
                <label for="username">User:</label>
                <input type="text" name="username" id="username" placeholder="半角英数字" required autofocus>
            </div>
            <div class="submit-box">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" placeholder="半角英数字かつ8文字以上" minlength="8" required>
            </div>
            <button type="submit" class="button register">Login</button>
        </form>
    </main>
</body>
</html>