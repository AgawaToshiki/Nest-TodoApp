{{>head}}
<body>
    {{>header}}
    <main>
        <form action="/tasks/edit/{{id}}" method="POST" class="add-task" autocomplete="off">
            <div class="submit-box">
                <label for="title">Task:</label>
                <input type="text" name="title" id="title" value="{{title}}" required>
            </div>
            <div class="submit-box">
                <label for="deadline">Deadline:</label>
                <input type="datetime-local" name="deadline" min="{{currentDate}}" id="deadline" value="{{deadline}}" required>
            </div>
            <button type="submit" class="submit-button register">Update</button>
        </form>
    </main>  
</body>
</html>